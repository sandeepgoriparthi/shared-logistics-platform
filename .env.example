# Shared Logistics Platform - Backend Configuration
# Copy this to .env and update values as needed

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection URL (use SQLite for local dev without PostgreSQL)
DATABASE_URL=sqlite+aiosqlite:///./logistics.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/logistics_db

# ===========================================
# CACHE CONFIGURATION
# ===========================================
# Redis URL (optional - uses in-memory cache if not available)
REDIS_URL=redis://localhost:6379/0

# ===========================================
# API CONFIGURATION
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# ===========================================
# OPTIMIZATION SETTINGS
# ===========================================
OPTIMIZATION_TIME_LIMIT_SECONDS=30
MAX_SHIPMENTS_PER_TRUCK=4
MIN_POOLING_SAVINGS_PERCENT=10
MAX_DETOUR_PERCENT=15

# ===========================================
# PRICING CONFIGURATION
# ===========================================
BASE_RATE_PER_MILE=2.50
FUEL_SURCHARGE_PERCENT=15
POOLING_DISCOUNT_PERCENT=25
MIN_MARGIN_PERCENT=10

# ===========================================
# MAPPING SERVICE (Free - No API keys needed!)
# ===========================================
# MapLibre style URL (free Carto basemaps)
MAP_STYLE_URL=https://basemaps.cartocdn.com/gl/positron-gl-style/style.json
# Nominatim for geocoding (free, no API key)
NOMINATIM_URL=https://nominatim.openstreetmap.org
# OSRM for routing (free, no API key)
OSRM_URL=https://router.project-osrm.org

# ===========================================
# ML MODEL PATHS (optional)
# ===========================================
DEMAND_MODEL_PATH=models/demand_forecaster.pt
PRICING_MODEL_PATH=models/pricing_agent.pt
POOLING_MODEL_PATH=models/pooling_predictor.pt

# ===========================================
# KAGGLE (optional - for ML training data)
# ===========================================
# KAGGLE_USERNAME=your_username
# KAGGLE_KEY=your_api_key
